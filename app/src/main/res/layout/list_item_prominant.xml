            android:onClick="@{() ->  callback.onClick(article)}"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin">-->

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/article_description_prominant"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_horizontal_margin"
                    android:layout_marginEnd="@dimen/item_horizontal_margin"
                    android:textStyle="normal"
                    android:textSize="@dimen/article_text_description"
                    android:ellipsize="end"
                    android:maxLines="2"
                    />
            <TextView
                    android:id="@+id/article_title_prominant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_horizontal_margin"
                    android:layout_marginEnd="@dimen/item_horizontal_margin"
                    android:textStyle="bold"
                    android:textSize="@dimen/article_text"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_above="@id/article_description_prominant"
            />
            <ImageView
                    android:id="@+id/article_image_prominant"
                    android:layout_above="@id/article_title_prominant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
            android:id="@+id/previous_article_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text = "@string/previous_article_header_text"
            android:text = "@string/previous_article_header_text"
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:textSize="@dimen/article_text"
            android:visibility="gone"
            />
    </LinearLayout>
</layout>